{
  "name": "auto-testing",
  "version": "1.0.0",
  "description": "Playwright Cucumber TS",
  "main": "index.js",
  "config": {
    "browser": "chromium"
  },
  "scripts": {
    "debug": "cross-env ENV=staging PWDEBUG=1 DEBUG=pw:api cucumber-js --config=config/cucumber.cjs --format ./config/allure-reporter.cjs",
    "pretest": "npx ts-node src/helper/report/init.ts",
    "test": "cross-env ENV=staging cucumber-js --config=config/cucumber.cjs --format ./config/allure-reporter.cjs || true",
    "test:prod": "cross-env ENV=prod cucumber-js --config=config/cucumber.cjs --format ./config/allure-reporter.cjs || true",
    "test:qa": "cross-env ENV=qa cucumber-js --config=config/cucumber.cjs --format ./config/allure-reporter.cjs || true",
    "test:local": "cross-env ENV=local cucumber-js --config=config/cucumber.cjs --format ./config/allure-reporter.cjs || true",
    "test:security": "cross-env ENV=staging cucumber-js --config=config/cucumber.cjs --format ./config/allure-reporter.cjs --tags \"@security\" || true",
    "test:accessibility": "cross-env ENV=staging cucumber-js --config=config/cucumber.cjs --format ./config/allure-reporter.cjs --tags \"@accessibility\" || true",
    "posttest": "npx ts-node src/helper/report/report.ts",
    "test:failed": "cross-env ENV=staging cucumber-js --config=config/cucumber.cjs --format ./config/allure-reporter.cjs -p rerun @rerun.txt",
    "k6:local": "k6 run --summary-export=k6-results.json --out json=k6-raw-results.json src/performance/weather-api.k6.js",
    "k6:load": "k6 run --summary-export=k6-load-results.json --out json=k6-load-raw-results.json -e TEST_TYPE=load src/performance/weather-api.k6.js",
    "k6:stress": "k6 run --summary-export=k6-stress-results.json --out json=k6-stress-raw-results.json -e TEST_TYPE=stress src/performance/weather-api.k6.js",
    "k6:spike": "k6 run --summary-export=k6-spike-results.json --out json=k6-spike-raw-results.json -e TEST_TYPE=spike src/performance/weather-api.k6.js",
    "k6:load:verbose": "k6 run --summary-export=k6-load-results.json --out json=k6-load-raw-results.json -e TEST_TYPE=load -e VERBOSE=true src/performance/weather-api.k6.js",
    "k6:stress:verbose": "k6 run --summary-export=k6-stress-results.json --out json=k6-stress-raw-results.json -e TEST_TYPE=stress -e VERBOSE=true src/performance/weather-api.k6.js",
    "k6:cloud": "k6 cloud src/performance/weather-api.k6.js",
    "k6:cloud:load": "k6 cloud -e TEST_TYPE=load src/performance/weather-api.k6.js",
    "k6:cloud:stress": "k6 cloud -e TEST_TYPE=stress src/performance/weather-api.k6.js",
    "k6:grafana": "k6 run --out cloud src/performance/weather-api.k6.js",
    "k6:grafana:load": "k6 run --out cloud -e TEST_TYPE=load src/performance/weather-api.k6.js",
    "k6:grafana:stress": "k6 run --out cloud -e TEST_TYPE=stress src/performance/weather-api.k6.js",
    "k6:report": "node generate-k6-report.js",
    "open:k6-report": "open k6-performance-report.html",
    "clean": "rm -rf ./reports && rm -rf ./allure-results && rm -rf ./test-results && rm -rf ./playwright-report && rm -rf ./weather-api-result.json && rm -rf ./k6-*results*.json && rm -rf ./k6-performance-report.html && rm -rf ./@rerun.txt"
  },
  "keywords": [],
  "author": "EyupUK",
  "license": "",
  "devDependencies": {
    "@cucumber/cucumber": "^10.9.0",
    "@cucumber/messages": "^27.2.0",
    "@faker-js/faker": "^9.4.0",
    "@axe-core/playwright": "^4.9.2",
    "@pact-foundation/pact": "^12.3.0",
    "@playwright/test": "^1.50.0",
    "@types/node": "^22.13.1",
    "allure-commandline": "^2.34.1",
    "allure-cucumberjs": "^3.4.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "fs-extra": "^11.2.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "winston": "^3.17.0"
  },
  "dependencies": {
    "@exodus/schemasafe": "^1.3.0",
    "axios": "^1.12.0",
    "csv-parse": "^6.1.0",
    "multiple-cucumber-html-reporter": "^3.8.0",
    "reflect-metadata": "^0.2.2"
  }
}
