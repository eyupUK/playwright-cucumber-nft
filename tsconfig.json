{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "lib": ["es2021"],
    "typeRoots": ["./node_modules/@types", "src/helper/types"],
    "resolveJsonModule": true,
    "paths": {
      "@pages/*": ["./pages/*"],
      "@utils/*": ["./helper/util/*"]
    },
    "target": "ES2022",
    "module": "commonjs",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
  }
}
